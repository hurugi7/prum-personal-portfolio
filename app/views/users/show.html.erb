<% content_for :js do %>
  <%= javascript_import_module_tag "custom/bar_chart" %>
<% end %>
<div id="months" data-json="<%= @months.to_json %>"></div>
<div id="back_chart" data-json="<%= @back_chart.to_json %>"></div>
<div id="front_chart" data-json="<%= @front_chart.to_json %>"></div>
<div id="infra_chart" data-json="<%= @infra_chart.to_json %>"></div>
<div class="center">
  <div class="container">
    <div class="img">
      <%= image_tag @user.avatar_image.variant(:display) if @user.avatar_image.attached? %>
      <%= image_tag "85340511.png" unless @user.avatar_image.attached? %>
    </div>
    <div class="introduce">
      <h2><span>自己紹介</span></h2>
      <p class="real"><%= @user.introduce_messages %></p>
      <%= link_to "自己紹介を編集する", edit_user_path(@user), class: "btn" %>
    </div>
  </div>
  <div class="skillchart">
    <h2><span>スキルチャート</span></h2>
    <%= link_to "スキルを編集する", skills_path, class: "btn" %>
    <div class="chart">
      <div style="display: block; box-sizing: border-box; height: 500px; width: 1064px; margin-left: 20px;">
        <canvas id="myChart"></canvas>
      </div>
    </div>
  </div>
</div>