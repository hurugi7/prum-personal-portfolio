<% provide(:title, "Log in") %>
<div class="page_title">
  <h1 id="login_title">ログイン</h1>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3" >
      <%= form_with(url: login_path, scope: :session) do |f| %>

        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class:  'self-form-control' %>

        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: 'self-form-control' %>

        <%= f.submit "ログインする", class: "btn btn-lg center-block" %>
      <% end %>
    </div>
</div>
